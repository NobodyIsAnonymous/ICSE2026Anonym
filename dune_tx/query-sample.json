# 根据tx hash查询交易
GET /eth_block/_search
{
  "_source": false, 
  "query": {"nested": {
    "inner_hits": {"_source": true}, 
    "path": "Transactions",
    "query": {"term": {
      "Transactions.Hash": "0xb2651f8e64c26b19f8b6830dd392a4296322dcd71f60a7b86dd6a3930071a510"
    }}
  }}
}

# 根据函数selector查 block 18000000~18000010 区间的交易 
GET /eth_block/_search
{
  "_source": ["Number", "Timestamp"], 
  "sort": [
    {
      "Number": {
        "order": "desc"
      }
    }
  ], 
  "query": {"bool": {"filter": [
    {"range": {
      "Number": {
        "gte": 18000000,
        "lte": 18000010
      }
    }},
    {"nested": {
      "inner_hits": {"_source": true}, 
      "path": "Transactions",
      "query": {"term": {
        "Transactions.CallFunction": "0xa9059cbb"
      }}
    }}
  ]}}
}

# 根据fromaddress 查询最近10个block的交易
GET /eth_block/_search
{
  "_source": ["Number", "Timestamp"], 
  "size": 10, 
  "sort": [
    {
      "Number": {
        "order": "desc"
      }
    }
  ], 
  "query": {"nested": {
    "inner_hits": {"_source": ["Transactions.Hash", "Transactions.ToAddress"]}, 
    "path": "Transactions",
    "query": {"term": {
      "Transactions.FromAddress": "0xf16e9b0d03470827a95cdfd0cb8a8a3b46969b91"
    }}
  }}
}

# 查询某个合约什么时候创建的
GET /eth_block/_search
{
  "query": {"nested": {
    "path": "Transactions",
    "query": {"term": {
      "Transactions.ConAddress": "0xc02aaa39b223fe8d0a0e5c4f27ead9083c756cc2"
    }}
  }},
  "_source": ["Timestamp"]
}